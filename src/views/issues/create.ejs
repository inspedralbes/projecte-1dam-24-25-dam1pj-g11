<!-- src/views/issues/create.ejs -->
<%- include('../partials/header', { title: 'Crear Nueva Incidencia' }) %>

<div class="row">
  <div class="col-lg-8 offset-lg-2">
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h2 class="mb-0">Crear Nueva Incidencia</h2>
      </div>
      <div class="card-body">
        <form id="createIssueForm" action="/issues/create" method="POST">
          <div class="mb-3">
            <label for="title" class="form-label">Título de la incidencia</label>
            <input type="text" class="form-control" id="title" name="title" required>
            <div class="invalid-feedback">El título es obligatorio</div>
          </div>
          
          <div class="mb-3">
            <label for="description" class="form-label">Descripción detallada</label>
            <textarea class="form-control" id="description" name="description" rows="5" required></textarea>
            <div class="invalid-feedback">La descripción es obligatoria</div>
          </div>
          
          <div class="mb-3">
            <label for="type" class="form-label">Tipo de incidencia</label>
            <select class="form-select" id="type" name="type" required>
              <option value="" selected disabled>Seleccionar tipo</option>
              <% types.forEach(type => { %>
                <option value="<%= type %>">
                  <% if (type === 'hardware') { %>Hardware<% } %>
                  <% if (type === 'software') { %>Software<% } %>
                  <% if (type === 'network') { %>Red<% } %>
                  <% if (type === 'other') { %>Otro<% } %>
                </option>
              <% }); %>
            </select>
            <div class="invalid-feedback">Debe seleccionar un tipo</div>
          </div>
          
          <div class="mb-3">
            <label for="departmentId" class="form-label">Departamento</label>
            <select class="form-select" id="departmentId" name="departmentId" required>
              <option value="" selected disabled>Seleccionar departamento</option>
              <% departments.forEach(department => { %>
                <option value="<%= department.id %>"><%= department.name %></option>
              <% }); %>
            </select>
            <div class="invalid-feedback">Debe seleccionar un departamento</div>
          </div>

          <!-- En producción, este campo se obtendría de la sesión del usuario -->
          <input type="hidden" name="userId" value="3">
          
          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Enviar Incidencia</button>
            <a href="/" class="btn btn-outline-secondary">Cancelar</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>