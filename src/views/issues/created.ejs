<!-- src/views/issues/created.ejs -->
<%- include('../partials/header', { title: 'Incidencia Creada' }) %>

<div class="row">
  <div class="col-lg-6 offset-lg-3 text-center">
    <div class="card">
      <div class="card-header bg-success text-white">
        <h2 class="mb-0">¡Incidencia Creada con Éxito!</h2>
      </div>
      <div class="card-body">
        <div class="alert alert-success">
          <h3 class="mt-2">Incidencia #<%= issueId %></h3>
          <p>Se ha registrado correctamente su incidencia en el sistema.</p>
          <p><strong>¡Importante!</strong> Anote el número de incidencia para realizar seguimiento.</p>
        </div>
        
        <div class="d-grid gap-2 mt-4">
          <a href="/issues/track" class="btn btn-primary">Realizar Seguimiento</a>
          <a href="/issues/create" class="btn btn-outline-secondary">Crear Otra Incidencia</a>
          <a href="/" class="btn btn-outline-dark">Volver al Inicio</a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>