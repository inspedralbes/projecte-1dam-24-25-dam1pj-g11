<!-- src/views/actions/create.ejs -->
<%- include('../partials/header', { title: 'Añadir Actuación' }) %>

<div class="row">
  <div class="col-lg-8 offset-lg-2">
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h2 class="mb-0">Añadir Actuación a Incidencia #<%= issue.id %></h2>
      </div>
      <div class="card-body">
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        
        <div class="alert alert-info">
          <h5><%= issue.title %></h5>
          <p><%= issue.description %></p>
          <div class="d-flex justify-content-between">
            <small>Departamento: <%= issue.Department ? issue.Department.name : 'N/A' %></small>
            <small>Creada por: <%= issue.Creator ? issue.Creator.fullName : 'N/A' %></small>
          </div>
        </div>
        
        <form id="actionForm" action="/actions/create" method="POST">
          <input type="hidden" name="issueId" value="<%= issue.id %>">
          <!-- En producción, este valor vendría de la sesión -->
          <input type="hidden" name="technicianId" value="2">
          
          <div class="mb-3">
            <label for="description" class="form-label">Descripción de la actuación</label>
            <textarea class="form-control" id="description" name="description" rows="5" required
                      minlength="20"><%= typeof formData !== 'undefined' ? formData.description : '' %></textarea>
            <div class="form-text text-muted">La descripción debe tener al menos 20 caracteres.</div>
            <div class="invalid-feedback">La descripción es obligatoria y debe tener al menos 20 caracteres.</div>
          </div>
          
          <div class="mb-3">
            <label for="timeSpent" class="form-label">Tiempo dedicado (minutos)</label>
            <input type="number" class="form-control" id="timeSpent" name="timeSpent" min="0" value="<%= typeof formData !== 'undefined' ? formData.timeSpent : '0' %>">
          </div>
          
          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Guardar Actuación</button>
            <a href="/issues/<%= issue.id %>/close" class="btn btn-outline-secondary">Cancelar</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>