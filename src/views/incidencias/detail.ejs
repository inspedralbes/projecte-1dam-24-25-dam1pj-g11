<%- include('../partials/header', { title: 'Detalle de Incidencia' }) %>

<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h2><%= incidencia.titulo %></h2>
        <span class="badge <%= 
          incidencia.estado === 'abierta' ? 'bg-danger' : 
          incidencia.estado === 'en_proceso' ? 'bg-warning' : 
          incidencia.estado === 'resuelta' ? 'bg-success' : 
          'bg-secondary' 
        %>">
          <%= incidencia.estado.replace('_', ' ') %>
        </span>
      </div>
      <div class="card-body">
        <h5>Descripción:</h5>
        <p class="card-text"><%= incidencia.descripcion %></p>
        
        <div class="row mt-4">
          <div class="col-md-4">
            <p><strong>Prioridad:</strong> 
              <span class="badge <%= 
                incidencia.prioridad === 'baja' ? 'bg-info' : 
                incidencia.prioridad === 'media' ? 'bg-warning' : 
                incidencia.prioridad === 'alta' ? 'bg-danger' : 
                'bg-dark' 
              %>">
                <%= incidencia.prioridad %>
              </span>
            </p>
          </div>
          <div class="col-md-4">
            <p><strong>Tipo:</strong> <%= incidencia.tipo %></p>
          </div>
          <div class="col-md-4">
            <p><strong>Fecha:</strong> <%= incidencia.fecha.toLocaleDateString() %></p>
          </div>
        </div>
        
        <p class="mt-3"><strong>Técnico asignado:</strong> <%= incidencia.tecnico || 'Sin asignar' %></p>
      </div>
      <div class="card-footer">
        <a href="/incidencias/<%= incidencia.id %>/edit" class="btn btn-warning">Editar</a>
        <a href="/incidencias" class="btn btn-secondary">Volver al listado</a>
        <a href="/incidencias/<%= incidencia.id %>/delete" class="btn btn-danger float-end" onclick="return confirm('¿Seguro que deseas eliminar esta incidencia?')">Eliminar</a>
      </div>
    </div>
    
    <!-- Sección de Actos -->
    <div class="card">
      <div class="card-header">
        <% const listaActos = typeof actos !== 'undefined' ? actos : []; %>
        <h3>Actos realizados (<%= listaActos.length %>/3)</h3>
      </div>
      <div class="card-body">
        <% if (listaActos.length === 0) { %>
          <p class="text-muted">No hay actos registrados para esta incidencia.</p>
        <% } else { %>
          <div class="list-group">
            <% listaActos.forEach(acto => { %>
              <div class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-1">Acto del <%= new Date(acto.fecha).toLocaleDateString() %></h5>
                  <a href="/actos/<%= acto.id %>/delete" class="btn btn-sm btn-danger" 
                     onclick="return confirm('¿Seguro que deseas eliminar este acto?')">
                    <i class="bi bi-trash"></i> Eliminar
                  </a>
                </div>
                <p class="mb-1"><%= acto.descripcion %></p>
                <small>Responsable: <%= acto.responsable %></small>
              </div>
            <% }); %>
          </div>
        <% } %>
        
        <% if (listaActos.length < 3) { %>
          <!-- Modificamos la acción del formulario para asegurarnos de que coincida con la ruta definida -->
          <form action="/incidencias/<%= incidencia.id %>/actos" method="POST" class="mt-3">
            <div class="mb-3">
              <label for="descripcion" class="form-label">Nuevo acto</label>
              <textarea class="form-control" id="descripcion" name="descripcion" rows="2" required placeholder="Describa la acción realizada"></textarea>
            </div>
            <div class="mb-3">
              <label for="responsable" class="form-label">Responsable</label>
              <input type="text" class="form-control" id="responsable" name="responsable" required>
            </div>
            <button type="submit" class="btn btn-primary">Añadir acto</button>
          </form>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>